{
  "name": "supascan",
  "version": "0.0.1",
  "description": "Security analysis tool for Supabase databases",
  "main": "index.ts",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "supascan": "./index.ts"
  },
  "files": [
    "index.ts",
    "commands/",
    "services/",
    "context.ts",
    "utils.ts",
    "version.ts"
  ],
  "scripts": {
    "lint": "tsc --noEmit",
    "start": "bun run index.ts",
    "format": "prettier --write .",
    "build": "bun run lint && bun build --compile --minify --outfile dist/supascan ./index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@kitajs/ts-html-plugin": "^4.1.3",
    "@types/bun": "latest",
    "knip": "^5.64.2",
    "prettier": "^3.4.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@supabase/supabase-js": "^2.74.0",
    "commander": "^14.0.1",
    "consola": "^3.4.2",
    "picocolors": "^1.1.1"
  }
}
